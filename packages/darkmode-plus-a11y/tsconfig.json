{
	"compilerOptions": {
		"target": "es5",
		"module": "esnext",
		"lib": ["dom", "esnext"],
		"jsx": "react",
		"declaration": true,
		"declarationDir": "dist",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"outDir": "dist",
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
